alias g="git"
alias gbdr='git branch -r | awk "{print \$1}" | egrep -v -f /dev/fd/0 <(git branch -vv | grep origin) | awk "{print \$1}" | xargs git branch -D'
alias gup='git fetch --all --prune && git checkout develop && git pull && gbdr'
