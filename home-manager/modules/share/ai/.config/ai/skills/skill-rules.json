{
  "version": "1.0",
  "description": "Skill activation triggers for Claude Code. Controls when skills automatically suggest or block actions.",
  "skills": {
    "clear-writing": {
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "write clearly",
          "clear writing",
          "improve writing",
          "documentation",
          "commit message",
          "error message",
          "explanation",
          "report",
          "UI text",
          "README",
          "help text",
          "comment"
        ],
        "intentPatterns": [
          "(write|improve|edit|review).*(documentation|commit|message|text|copy)",
          "(make|write).*(clear|professional|better)",
          "how (do|can) (I|we) (write|explain)"
        ]
      }
    },
    "implementation-planner": {
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "breakdown the task",
          "plan the implementation",
          "break down",
          "implementation plan",
          "how to implement",
          "refactor",
          "bug fix"
        ],
        "intentPatterns": [
          "(break.*down|decompose|plan).*(task|feature|implementation|refactor)",
          "(how|what).*(implement|build|create|add).*(feature|functionality)",
          "(complex|large).*(feature|task|change)"
        ]
      }
    },
    "create-skill": {
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "create skill",
          "new skill",
          "make a skill",
          "scaffold skill",
          "build skill"
        ],
        "intentPatterns": [
          "(create|make|build|scaffold|generate).*(skill|capability)",
          "new.*(skill|reusable)"
        ]
      }
    },
    "continuous-learning": {
      "priority": "low",
      "promptTriggers": {
        "keywords": [
          "learn",
          "reflect",
          "save as skill",
          "remember this",
          "create skill from this"
        ],
        "intentPatterns": [
          "(learn|save|remember|capture).*(pattern|approach|solution)",
          "reflect on.*(task|work|session)",
          "(worth|should) (saving|learning|remembering)"
        ]
      }
    },
    "web-research": {
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "search internet",
          "web research",
          "look up",
          "find information",
          "research online",
          "search for"
        ],
        "intentPatterns": [
          "(search|research|look up|find).*(internet|web|online)",
          "(what|how).*(current|latest|recent)",
          "compare.*(tools|libraries|frameworks|approaches)"
        ]
      }
    },
    "brainstorm": {
      "priority": "critical",
      "promptTriggers": {
        "keywords": [
          "brainstorm",
          "explore feature",
          "design discussion",
          "requirements",
          "create feature",
          "build component",
          "add functionality",
          "modify behavior",
          "new feature",
          "implement feature"
        ],
        "intentPatterns": [
          "(brainstorm|explore|discuss|design).*(feature|component|solution|approach)",
          "(create|build|add|implement|modify).*(feature|component|functionality|behavior)",
          "(what|how).*(should|could).*(we|I).*(build|implement|design)",
          "(requirements|specs|planning).*(for|about)"
        ]
      }
    },
    "kotlin-mentor": {
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "kotlin",
          "explain kotlin",
          "kotlin concept",
          "kotlin best practice",
          "kotlin idiom",
          "kotlin tutorial",
          "learn kotlin"
        ],
        "intentPatterns": [
          "(explain|teach|show|learn).*(kotlin)",
          "(kotlin).*(concept|feature|idiom|best practice|pattern)",
          "(how|what).*(kotlin).*(work|do|use)"
        ]
      }
    },
    "ruby-mentor": {
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "ruby",
          "explain ruby",
          "ruby concept",
          "ruby best practice",
          "ruby idiom",
          "ruby tutorial",
          "learn ruby"
        ],
        "intentPatterns": [
          "(explain|teach|show|learn).*(ruby)",
          "(ruby).*(concept|feature|idiom|best practice|pattern)",
          "(how|what).*(ruby).*(work|do|use)"
        ]
      }
    },
    "rails-mentor": {
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "rails",
          "explain rails",
          "rails concept",
          "rails best practice",
          "rails pattern",
          "rails tutorial",
          "learn rails",
          "activerecord",
          "actioncontroller",
          "rails convention"
        ],
        "intentPatterns": [
          "(explain|teach|show|learn).*(rails)",
          "(rails).*(concept|feature|pattern|best practice|convention)",
          "(how|what).*(rails).*(work|do|use)",
          "(activerecord|actioncontroller|actionview|activejob|actioncable)"
        ]
      }
    },
    "multi-mind": {
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "multi-mind",
          "multiple perspectives",
          "diverse viewpoints",
          "architecture decision",
          "technology choice",
          "strategic planning",
          "complex decision",
          "multi-faceted problem",
          "evaluate options"
        ],
        "intentPatterns": [
          "(multi-mind|multiple perspectives|diverse viewpoints)",
          "(architecture|technology).*(decision|choice|evaluation)",
          "(strategic|complex).*(planning|decision|problem)",
          "(evaluate|compare|analyze).*(options|approaches|alternatives)",
          "(multi-faceted|multifaceted).*(problem|challenge|question)"
        ]
      }
    }
  },
  "notes": {
    "priority_levels": {
      "critical": "Highest - Always trigger when matched",
      "high": "Important - Trigger for most matches",
      "medium": "Moderate - Trigger for clear matches",
      "low": "Optional - Trigger only for explicit matches"
    }
  }
}
