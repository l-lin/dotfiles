{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "command_list": "alt+k",
    "input_clear": "ctrl+c,ctrl+u",
    "input_submit": "enter,ctrl+s",
    "history_previous": "ctrl+p",
    "history_next": "ctrl+n",
    "messages_copy": "<leader>y,alt+y"
  },
  "autoshare": false,
  "share": "disabled",
  "autoupdate": false,
  "instructions": [],
  "layout": "stretch",
  "agent": {
    "general": {
      "model": "github-copilot/gpt-4.1"
    },
    "explore": {
      "model": "github-copilot/gpt-4.1"
    }
  }
}
