{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "keybinds": {
    "input_submit": "ctrl+s",
    "input_newline": "enter",
    "messages_copy": "<leader>y,alt+y",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_previous": "ctrl+p",
    "messages_next": "ctrl+n"
  },
  "autoshare": false,
  "share": "disabled",
  "autoupdate": false,
  "instructions": [".cursor/rules/*.md"],
  "layout": "stretch",
  "mode": {
    "code-reviewer": {
      "model": "github-copilot/claude-sonnet-4",
      "prompt": "{file:../ai/agents/code-reviewer.md}"
    },
    "researcher": {
      "model": "github-copilot/claude-sonnet-4",
      "prompt": "{file:../ai/agents/research-organizer.md}"
    }
  },
  "mcp": {
    "sequentialthinking": {
      "type": "local",
      "command": ["docker", "run", "--rm", "-i", "mcp/sequentialthinking"]
    }
  }
}
