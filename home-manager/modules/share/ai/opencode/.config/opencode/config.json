{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "keybinds": {
    "input_submit": "ctrl+s",
    "input_newline": "enter",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "switch_mode": "shift+tab"
  },
  "autoshare": false,
  "autoupdate": false,
  "instructions": [".cursor/rules/*.md"],
  "mcp": {
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-v",
        "mcp-memory:/app/dist",
        "mcp/memory"
      ]
    },
    "sequentialthinking": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "mcp/sequentialthinking"
      ]
    }
  }
}
