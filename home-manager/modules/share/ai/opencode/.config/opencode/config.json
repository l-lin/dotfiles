{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "keybinds": {
    "input_submit": "ctrl+s",
    "input_newline": "enter",
    "messages_copy": "<leader>y,alt+y",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "autoshare": false,
  "share": "disabled",
  "autoupdate": false,
  "instructions": [],
  "layout": "stretch",
  "mcp": {
    "sequentialthinking": {
      "type": "local",
      "command": ["docker", "run", "--rm", "-i", "mcp/sequentialthinking"]
    }
  }
}
