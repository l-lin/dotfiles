{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "keybinds": {
    "input_submit": "ctrl+s",
    "input_newline": "enter",
    "messages_copy": "<leader>y,alt+y",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_previous": "ctrl+p",
    "messages_next": "ctrl+n",
    "switch_mode": "shift+tab"
  },
  "autoshare": false,
  "share": "disabled",
  "autoupdate": false,
  "instructions": [".cursor/rules/*.md"],
  "mcp": {
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-v",
        "mcp-memory:/app/dist",
        "mcp/memory"
      ]
    },
    "sequentialthinking": {
      "type": "local",
      "command": ["docker", "run", "--rm", "-i", "mcp/sequentialthinking"]
    },
    "container-use": {
      "type": "local",
      "command": ["container-use", "stdio"],
      "enabled": true
    }
  }
}
