{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "keybinds": {
    "input_submit": "ctrl+s",
    "input_newline": "enter",
    "messages_copy": "<leader>y,alt+y",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_previous": "ctrl+p",
    "messages_next": "ctrl+n"
  },
  "autoshare": false,
  "share": "disabled",
  "autoupdate": false,
  "instructions": [".cursor/rules/*.md"],
  "layout": "stretch",
  "mode": {
    "brainstorm": {
      "model": "github-copilot/gpt-4.1",
      "prompt": "{file:../ai/prompts/brainstorm.md}",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "webfetch": true,
        "bash": false,
        "write": false
      }
    },
    "humanizer": {
      "model": "github-copilot/gpt-4.1",
      "prompt": "{file:../ai/prompts/humanizer.md}",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "bash": false,
        "write": false
      }
    },
    "mentor": {
      "model": "github-copilot/claude-sonnet-4",
      "prompt": "{file:../ai/prompts/mentor.md}",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "bash": false,
        "write": false
      }
    },
    "kotlin-mentor": {
      "model": "github-copilot/claude-sonnet-4",
      "prompt": "{file:../ai/prompts/kotlin-mentor.md}",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "bash": false,
        "write": false
      }
    }
  },
  "mcp": {
    "memory": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-v",
        "mcp-memory:/app/dist",
        "mcp/memory"
      ]
    },
    "sequentialthinking": {
      "type": "local",
      "command": ["docker", "run", "--rm", "-i", "mcp/sequentialthinking"]
    },
    "container-use": {
      "type": "local",
      "command": ["container-use", "stdio"],
      "enabled": true
    }
  }
}
