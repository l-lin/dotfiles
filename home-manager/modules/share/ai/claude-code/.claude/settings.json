{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(backlog:*)",
      "Bash(git:*)",
      "Bash(jira issue:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(tmux:*)",
      "Bash(rg:*)",
      "Edit",
      "Read",
      "Skill(backlog-create)",
      "Skill(backlog-implement)",
      "Skill(backlog-search)",
      "Skill(jira)",
      "Skill(clear-writing)",
      "Write",
      "WebFetch",

      "mcp__atlassian__fetch",
      "mcp__atlassian__getJiraIssue",
      "mcp__atlassian__getConfluencePage",
      "mcp__datadog__get_datadog_metric",
      "mcp__datadog__search_datadog_dashboards",
      "mcp__datadog__search_datadog_incidents",
      "mcp__datadog__search_datadog_logs",
      "mcp__memory__*",
      "mcp__sequentialthinking__*"
    ],
    "deny": []
  },
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/cc_statusline.rb",
    "padding": 0
  }
}
