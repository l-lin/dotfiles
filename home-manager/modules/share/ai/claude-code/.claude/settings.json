{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(backlog:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(jira issue:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(tmux:*)",
      "Bash(rg:*)",
      "Edit",
      "Read",
      "Skill(brainstorm)",
      "Skill(clear-writing)",
      "Skill(continuous-learning)",
      "Skill(create-skill)",
      "Skill(implementation-planner)",
      "Skill(jira)",
      "Skill(web-research)",
      "Skill(kotlin-mentor)",
      "Skill(rails-mentor)",
      "Skill(ruby-mentor)",
      "Write",
      "WebFetch",
      "mcp__atlassian__fetch",
      "mcp__atlassian__getJiraIssue",
      "mcp__atlassian__getConfluencePage",
      "mcp__datadog__get_datadog_metric",
      "mcp__datadog__search_datadog_dashboards",
      "mcp__datadog__search_datadog_incidents",
      "mcp__datadog__search_datadog_logs",
      "mcp__memory__*",
      "mcp__sequentialthinking__*"
    ],
    "deny": []
  },
  "model": "opusplan",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/ai/hooks/skill-activation.rb"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/cc_statusline.rb",
    "padding": 0
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "hookify@claude-plugins-official": true
  }
}
